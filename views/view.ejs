<% include partials/header %>

      <div class="container">
          <div class="jumbotron">
              <h1 class="display-3">View my info</h1>
              <p class="lead">Jumbo helper text</p>
          </div>

          <table class="table table-striped table-hover table-bordered table-inverse">
              <thead class="thead-inverse|thead-default">
                  <tr>
                      <th>Name</th>
                      <th>Phone</th>
                      <th>Action</th>
                  </tr>
                  </thead>
                  <tbody>

                    <% userData.forEach(function(oneUserData){ %>
                      <tr>
                          <td scope="row"> <%= oneUserData.name %> </td>
                          <td> <%= oneUserData.phone %> </td>
                          <td>
                            
                            <a href="/update/<%= oneUserData._id %>">
                                <i class="fa fa-edit"></i> 
                            </a>

                            <a onclick="return deleteOrNot('Do you want to delete?');" href="/delete/<%= oneUserData._id %>">
                                <i class="fa fa-remove"></i>
                            </a> 

                          </td>

                      </tr>
                    <% }) %>
                  </tbody>
          </table>

          <a class="btn btn-primary" href="new" role="button">Add new data</a>

      </div>


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>